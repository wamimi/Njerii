---
import Layout from '../layouts/Layout.astro';
import BlogPost from '../components/BlogPost.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog | Njerii">
  <div class="container">
    <h1 class="title">Konnichiwa, I'm Njerii!</h1>
    <p class="intro">Rustacean ðŸ¦€ | ZKP Explorer | Blockchain Dev</p>
    
    <div class="blog-grid">
      {posts.map(post => (
        <BlogPost
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          tags={post.data.tags}
          url={`/blog/${post.slug}`}
        />
      ))}
    </div>

    <div class="social">
      <p>
        Let's connect! Find me on 
        <a href="https://x.com/wamimi" target="_blank" rel="noopener noreferrer">
          X @njerii
        </a>
      </p>
    </div>
  </div>
</Layout>

<style>
  .container {
    padding: 2rem 0;
  }

  .title {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--rust-color);
  }

  .intro {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    font-family: 'VT323', monospace;
    color: var(--accent-brown);
  }

  .blog-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    margin-bottom: 2rem;
  }

  .social {
    font-family: 'VT323', monospace;
    font-size: 1.2rem;
    margin-top: 3rem;
    text-align: center;
  }

  .social a {
    color: var(--rust-color);
    text-decoration: none;
    border-bottom: 2px solid var(--rust-color);
  }

  .social a:hover {
    background-color: var(--rust-color);
    color: var(--bg-color);
  }
</style>