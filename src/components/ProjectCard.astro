---
import { format } from 'date-fns';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  url: string;
  tags: string[];
  github?: string;
  demo?: string;
  image?: string;
}

const { title, description, pubDate, url, tags, github, demo, image } = Astro.props;
---

<article class="project-card pixel-border">
  {image && (
    <div class="project-image">
      <img src={image} alt={title} loading="lazy" />
    </div>
  )}
  <div class="project-content">
    <h2>{title}</h2>
    <div class="metadata">
      <time class="date">{format(pubDate, 'MMMM d, yyyy')}</time>
      <div class="tags">
        {tags.map(tag => <span class="tag">{tag}</span>)}
      </div>
    </div>
    <p>{description}</p>
    <div class="project-links">
      <a href={url} class="read-more">Details â†’</a>
      {github && (
        <a href={github} target="_blank" rel="noopener noreferrer" class="github-link">
          <svg height="16" width="16" viewBox="0 0 16 16" class="github-icon">
            <path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path>
          </svg>
          GitHub
        </a>
      )}
      {demo && (
        <a href={demo} target="_blank" rel="noopener noreferrer" class="demo-link">
          <span class="demo-icon">ðŸš€</span>
          Live Demo
        </a>
      )}
    </div>
  </div>
</article>

<style>
  .project-card {
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid var(--text-color);
    position: relative;
    transition: transform 0.2s ease;
    display: flex;
    flex-direction: column;
  }

  .project-card:hover {
    transform: translateY(-5px);
  }

  .project-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    margin-bottom: 1rem;
    border: 1px solid var(--accent-tan);
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .project-card:hover .project-image img {
    transform: scale(1.05);
  }

  .project-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  h2 {
    color: var(--rust-color);
    margin-bottom: 0.75rem;
    font-size: 1.75rem;
    line-height: 1.3;
  }

  .metadata {
    margin-bottom: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .date {
    font-family: 'VT323', monospace;
    color: var(--accent-brown);
    font-size: 1.1rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--accent-tan);
    color: var(--text-color);
    padding: 0.25rem 0.75rem;
    border-radius: 3px;
    font-size: 0.85rem;
    font-family: 'VT323', monospace;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  p {
    margin-bottom: 1.25rem;
    line-height: 1.6;
    color: var(--text-color);
  }

  .project-links {
    display: flex;
    gap: 1rem;
    margin-top: auto;
    flex-wrap: wrap;
  }

  .read-more, .github-link, .demo-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--rust-color);
    text-decoration: none;
    font-family: 'VT323', monospace;
    font-size: 1.1rem;
    transition: opacity 0.2s ease;
    padding: 0.3rem 0.7rem;
    border: 1px solid var(--rust-color);
    border-radius: 4px;
  }

  .read-more:hover, .github-link:hover, .demo-link:hover {
    background-color: rgba(183, 65, 14, 0.1);
  }

  .github-icon {
    fill: currentColor;
  }

  .demo-icon {
    font-size: 1.2rem;
  }

  /* Pixel border effect */
  .pixel-border::after {
    content: '';
    position: absolute;
    bottom: -6px;
    right: -6px;
    width: 100%;
    height: 100%;
    background: var(--rust-color);
    z-index: -1;
  }

  @media (max-width: 768px) {
    .project-card {
      padding: 1rem;
    }
    
    h2 {
      font-size: 1.5rem;
    }

    .project-links {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style> 