---
interface Props {
  project: {
    title: string;
    description: string;
    tags: string[];
    github: string;
    demo: string | null;
    status: string;
  };
  index: number;
}

const { project, index } = Astro.props;
---

<article 
  class="glass-effect rounded-xl p-8 hover:shadow-xl transition-all duration-300 group animate-on-scroll hover:scale-105" 
  style={`animation-delay: ${index * 0.1}s`}
>
  <!-- Status Indicator -->
  <div class="flex items-center justify-between mb-4">
    <span class={`px-3 py-1 rounded-full text-xs font-mono uppercase tracking-wide ${
      project.status === 'active' 
        ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400' 
        : project.status === 'completed'
        ? 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400'
        : 'bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-400'
    }`}>
      {project.status}
    </span>
    
    <!-- Project Links -->
    <div class="flex items-center space-x-3">
      {project.github && (
        <a 
          href={project.github} 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-charcoal dark:text-dark-text hover:text-matcha-green dark:hover:text-dark-accent transition-colors duration-200"
          aria-label="View source code"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      )}
      
      {project.demo && (
        <a 
          href={project.demo} 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-charcoal dark:text-dark-text hover:text-matcha-green dark:hover:text-dark-accent transition-colors duration-200"
          aria-label="View live demo"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
        </a>
      )}
    </div>
  </div>
  
  <!-- Project Title -->
  <h3 class="text-2xl font-mono font-bold text-forest-green dark:text-dark-heading mb-4 group-hover:text-matcha-green transition-colors duration-200">
    {project.title}
  </h3>
  
  <!-- Project Description -->
  <p class="text-charcoal dark:text-dark-text mb-6 leading-relaxed">
    {project.description}
  </p>
  
  <!-- Tags -->
  <div class="flex flex-wrap gap-2">
    {project.tags.map(tag => (
      <span class="px-3 py-1 bg-matcha-green/20 text-matcha-green dark:text-dark-accent rounded-full text-sm font-mono">
        {tag}
      </span>
    ))}
  </div>
</article>