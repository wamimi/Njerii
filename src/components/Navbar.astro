---
// Navigation component with backdrop blur effect
---

<nav class="fixed top-0 left-0 right-0 z-50 glass-effect border-b border-sage-green/20">
  <div class="container-max">
    <div class="flex items-center justify-between h-16 px-6">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2 group">
        <div class="w-8 h-8 bg-gradient-to-br from-matcha-green to-forest-green rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-200">
          <span class="text-white font-mono font-bold text-sm">N</span>
        </div>
        <span class="font-mono font-bold text-lg text-forest-green dark:text-dark-heading">
          Njerii's Apothecary
        </span>
      </a>
      
      <!-- Navigation Links -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="#experiments" class="nav-link">Experiments</a>
        <a href="#specimens" class="nav-link">Specimens</a>
        <a href="#formulations" class="nav-link">Formulations</a>
        <a href="#library" class="nav-link">Library</a>
        <a href="#contact" class="nav-link">Contact</a>
        
        <!-- Theme Toggle -->
        <button 
          onclick="window.toggleTheme()" 
          class="p-2 rounded-lg bg-sage-green/20 hover:bg-matcha-green/30 transition-colors duration-200"
          aria-label="Toggle theme"
        >
          <svg class="w-5 h-5 text-forest-green dark:text-dark-heading" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path class="dark:hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
            <path class="hidden dark:block" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
        </button>
      </div>
      
      <!-- Mobile Menu Button -->
      <button class="md:hidden p-2 rounded-lg bg-sage-green/20 hover:bg-matcha-green/30 transition-colors duration-200" id="mobile-menu-button">
        <svg class="w-6 h-6 text-forest-green dark:text-dark-heading" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="px-6 py-4 space-y-4 border-t border-sage-green/20">
        <a href="#experiments" class="block nav-link">Experiments</a>
        <a href="#specimens" class="block nav-link">Specimens</a>
        <a href="#formulations" class="block nav-link">Formulations</a>
        <a href="#library" class="block nav-link">Library</a>
        <a href="#contact" class="block nav-link">Contact</a>
      </div>
    </div>
  </div>
</nav>

<style>
  .nav-link {
    @apply font-mono text-sm text-charcoal dark:text-dark-text hover:text-matcha-green dark:hover:text-dark-accent transition-colors duration-200 relative;
  }
  
  .nav-link::after {
    content: '';
    @apply absolute bottom-0 left-0 w-0 h-0.5 bg-matcha-green dark:bg-dark-accent transition-all duration-200;
  }
  
  .nav-link:hover::after {
    @apply w-full;
  }
</style>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  // Close mobile menu when clicking on a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>