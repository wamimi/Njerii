---
import ProjectCard from './ProjectCard.astro';

// Sample project data - in a real implementation, this could come from a collection
const projects = [
  {
    title: "ZK-SNARK Circuit Optimizer",
    description: "A Rust-based tool for optimizing zero-knowledge proof circuits, reducing proof generation time by up to 40% while maintaining security guarantees.",
    tags: ["Rust", "ZKP", "Optimization", "Cryptography"],
    github: "https://github.com/njerii/zk-optimizer",
    demo: "https://zk-optimizer-demo.vercel.app",
    status: "active"
  },
  {
    title: "Formal Verification Framework",
    description: "Mathematical framework for formally verifying cryptographic protocol implementations using Lean 4 and automated theorem proving.",
    tags: ["Formal Methods", "Lean 4", "Verification", "Mathematics"],
    github: "https://github.com/njerii/formal-crypto",
    demo: null,
    status: "completed"
  },
  {
    title: "Distributed Consensus Simulator",
    description: "Interactive simulation environment for testing consensus algorithms under various network conditions and adversarial scenarios.",
    tags: ["Consensus", "Simulation", "Distributed Systems", "TypeScript"],
    github: "https://github.com/njerii/consensus-sim",
    demo: "https://consensus-simulator.netlify.app",
    status: "active"
  },
  {
    title: "Privacy-Preserving Analytics",
    description: "Implementation of differential privacy techniques for blockchain analytics, enabling insights while protecting user privacy.",
    tags: ["Privacy", "Analytics", "Differential Privacy", "Python"],
    github: "https://github.com/njerii/private-analytics",
    demo: null,
    status: "research"
  }
];
---

<section id="specimens" class="section-padding">
  <div class="container-max">
    <div class="text-center mb-16 animate-on-scroll">
      <h2 class="text-4xl md:text-5xl font-mono font-bold mb-6">Specimens</h2>
      <p class="text-xl text-charcoal dark:text-dark-text max-w-3xl mx-auto">
        A curated collection of projects that demonstrate the practical application of cryptographic theory, 
        systems engineering, and mathematical rigor in solving real-world problems.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {projects.map((project, index) => (
        <ProjectCard 
          project={project} 
          index={index}
        />
      ))}
    </div>
    
    <!-- Call to Action -->
    <div class="text-center mt-16 animate-on-scroll">
      <a 
        href="https://github.com/njerii" 
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-flex items-center space-x-2 px-8 py-4 bg-transparent border-2 border-matcha-green text-matcha-green hover:bg-matcha-green hover:text-white font-mono rounded-lg transition-all duration-300 hover:scale-105"
      >
